<h2>Tasks</h2>
<div class = "container justify-content-center">
  <div class="row">
      <div class = "col-md-9 card">
        <div class = "card-body text-center">
        <h4 class = "card-title"> <%= @task.title %> </h4>
        <p class = "card-text"> <%= @task.text %> </p>
        </div>
      </div>
      <div class="col-md-3">
        <%= link_to "Edit", edit_project_task_path(@task), :class => 'btn btn-warning' %>
        <%= link_to "Delete", project_task_path(@task), method: :delete, data: {confirm: "Are you sure?"}, :class => 'btn btn-danger' %>
      </div>
  </div>
</div>
